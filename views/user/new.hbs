<section class="row">
  <h4>Create User:</h4>

  <form action="/user" method="post" class="auth-form">
    <p class="input-field">
      <input type="user[username]" name="username" placeholder="Username">
    </p>
    <p class="input-field">
      <input type="user[password]" name="password" placeholder="Password">
    </p>
    <p class="input-field">
      <input type="submit" value="Sign Up" class="btn">
    </p>
  </form>
</section>
