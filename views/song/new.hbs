<section class="form-container">
  <h4>Add Song</h4>
  <form action="/song" method="post" class="song-form">
    <div class="input-field">
      <input name="song[name]" cols="30" rows="10" placeholder="Song Title"></input>
      <input name="song[artist]" cols="30" rows="10" placeholder="Artist"></input>
      <input name="song[year]" cols="30" rows="10" placeholder="Year"></input>
      <input name="song[genre]" cols="30" rows="10" placeholder="Genre"></input>
    </div>

    <div class="input-field">
      <input type="submit" value="Add" class="btn">
    </div>
  </form>
</section>